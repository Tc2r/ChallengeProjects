<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tc2r.changereturn.MainActivity">

    <TextView
        android:text="Change Return Program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_BinDecTitle"
        android:textSize="16sp"/>

    <TextView
        android:text="Enter Cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="-30dp"
        android:id="@+id/tv_decimal"
        android:layout_below="@+id/tv_BinDecTitle"
        android:layout_alignStart="@+id/tv_BinDecTitle"/>
    <TextView
        android:text="Enter Change Given"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_binary"
        android:layout_alignTop="@+id/tv_decimal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"/>

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/et_enterChange"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tv_binary"
        android:layout_alignStart="@+id/tv_binary"
        android:text="1.91"/>



    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/et_enterCost"
        android:layout_below="@+id/tv_decimal"
        android:layout_alignStart="@+id/tv_decimal"
        android:text="1.50"/>

    <Button
        android:text="Change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_BinDecTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/btn_bindecconvert"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_bindecconvert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_results"/>
</RelativeLayout>
